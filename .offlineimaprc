[general]
ui=TTYUI
accounts = Gmail, UoB, UoB-gmail, UWE
maxsyncaccounts = 4
pythonfile = ~/.offlineimap.py

[Account Gmail]
localrepository = Local
remoterepository = Remote
synclabels = yes
labelsheader = X-Keywords

[Account UoB-gmail]
localrepository = Local-UoB-gmail
remoterepository = Remote-UoB-gmail
synclabels = yes
labelsheader = X-Keywords

[Account UoB]
localrepository = Local-UoB
remoterepository = Remote-UoB

[Account UWE]
localrepository = Local-UWE
remoterepository = Remote-UWE

[Repository Local]
type = GmailMaildir
localfolders = ~/Maildir/gmail

[Repository Remote]
type = Gmail
remoteuser = scannell.aidan@gmail.com
remotepasseval = get_password_emacs("imap.gmail.com", "scannell.aidan@gmail.com", "993")
sslcacertfile = /usr/local/etc/openssl/cert.pem
ssl_version = tls1_2
realdelete = no
folderfilter = lambda folder: folder.startswith('[Gmail]/') and \
    folder[8:] in ['All Mail', 'Trash', 'Sent Mail', 'Drafts', 'Spam'] 
trashfolder = [Gmail]/Trash 
holdconnectionopen = true
keepalive = 60


